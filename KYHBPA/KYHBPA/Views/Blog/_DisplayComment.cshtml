@using KYHBPA.Models
@model KYHBPA.Models.ViewModels.CommentViewModel

@using (Html.BeginForm("Edit", "PollOption"))
{
    <div class="form-horizontal">
        <hr />
        @Html.HiddenFor(model => model.Id)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2">
                @Model.Email.Substring(0,(@Model.Email).IndexOf("@")) 
            </div>
            <div class="col-md-8">
                @Html.DisplayFor(model => model.Text, new {htmlAttributes = new {@class = "form-control"}})
            </div>
            <div class="col-md-2">
                @Model.Posted.ToString("U")
            </div>
        </div>
    </div>
}