@using KYHBPA.Models
@model KYHBPA.Models.ViewModels.PostViewModel

@{
    ViewBag.Title = "Post";
}

<br />
<h2>@Model.Title</h2>
<br/>
<br />
@Model.Description
<br />


<hr />
<h4>Add Comment</h4>

@using (Html.BeginForm("AddComment", "Blog", FormMethod.Post, new { id = Model.Id }))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.Comment.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comment.Text, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Sign In">
                @Html.ActionLink("Submit", "AddComment", "Blog", new {id = Model.Id, text = Model.Comment.Text}, null)
            </div>
        </div>
    </div>
}

<hr/>
<h4>Comments</h4>

@foreach (var comment in Model.Comments)
{
    @Html.Partial("_DisplayComment", comment)
}
