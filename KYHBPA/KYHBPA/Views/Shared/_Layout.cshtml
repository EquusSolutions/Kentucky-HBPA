<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-home" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="~/">Organization
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>                            
                            <li>@Html.ActionLink("Staff", "BoardOfDirectors", "Home")</li>
                            <li>@Html.ActionLink("Board Minutes (V)", "BoardMinutes", "Minutes")</li>
                            <li>@Html.ActionLink("Community Minutes (V)", "CommunityMinutes", "Minutes")</li>
                            <li>@Html.ActionLink("Other Minutes (V)", "OtherMinutes", "Minutes")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="~/">Community
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("News (MVC)", "Index", "Home")</li>
                            <li>@Html.ActionLink("Newsletter (V)", "Index", "Home")</li>
                            <li>@Html.ActionLink("Blog (MVC)", "Index", "Home")</li>
                            <li>@Html.ActionLink("Events (V)", "Index", "Event")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="~/">Member
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Roster (V)", "Index", "Member")</li>  
                            <li>@Html.ActionLink("Benefits", "Benefits", "Member")</li>
                            <li>@Html.ActionLink("Benevolence (V)", "Index", "Home")</li>
                            <li>@Html.ActionLink("Registration", "Create", "Member")</li>
                        </ul>
                    </li>  
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="~/">Admin Portal
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Document", "Index", "Document")</li>
                            <li>@Html.ActionLink("Document Manager", "DocumentManagement", "Home")</li>
                            <li>@Html.ActionLink("Vistor Contacts", "Index", "Contact")</li>
                            <li>@Html.ActionLink("Polls", "Index", "Poll")</li>
                            <li>@Html.ActionLink("Minutes", "Index", "Minutes")</li>
                            <li>@Html.ActionLink("Events", "Index", "Event")</li>
                        </ul>
                    </li> 
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle glyphicon glyphicon-user" data-toggle="dropdown" href="~/">
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("My Account (V)", "Index", "Member")</li>  
                            <li>@Html.ActionLink("Logout (Implement)", "Index", "Home")</li>
                        </ul>
                    </li>  
                </ul>
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="https://www.paypal.com/fundraiser/hub">
                            <img src="~/img/donate-btn.png" alt="Donate through PayPal" height="24" width="101" /></li>
                        </a>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                &copy; @DateTime.Now.Year - Kentucky Horsemen’s Benevolent and Protective Association, Inc. -- Site design by Equus Solutions 
                <img src="~/img/EquusSolutions1.png" height="20" width="58" />
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
