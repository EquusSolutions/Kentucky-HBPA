<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @*Navbar*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand glyphicon glyphicon-home" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="~/">
                            Our Organization
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Who We Are", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Meet Our Staff", "BoardOfDirectors", "Home")</li>
                            <li>@Html.ActionLink("Board Minutes", "BoardMinutes", "Minutes")</li>
                            <li>@Html.ActionLink("Community Minutes", "CommunityMinutes", "Minutes")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="~/">
                            Community
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("News", "NewsGallery", "News")</li>
                            <li>@Html.ActionLink("Calls To Action", "CallToActionGallery", "CallToAction")</li>
                            <li>@Html.ActionLink("Newsletters", "NewsLetter", "Document")</li>
                            <li>@Html.ActionLink("Blog", "Blog", "Blog")</li>
                            <li>@Html.ActionLink("Events Calendar", "Index", "Event")</li>
                            <li>@Html.ActionLink("Polls", "DisplayPolls", "Poll")</li>
                            @*<li>@Html.ActionLink("Jockey Profile", "JockeyProfile", "Home")</li>*@
                            <li>@Html.ActionLink("Photo Gallery", "PhotoGallery", "Document") </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="~/">
                            Membership
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Benefits of Membership", "Benefits", "Member")</li>
                            <li>@Html.ActionLink("Become a Member", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                            <li>@Html.ActionLink("Download Member Card", "DownloadMemberCard", "Document")</li>
                        </ul>
                    </li>

                    @{
                        if (User.IsInRole(KYHBPA.Models.RoleName.Administrator))
                        {
                            Html.RenderPartial("_AdminPortal");
                        }
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">

                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>

                    <li>
                        <a href="https://www.paypal.com/us/webapps/mpp/donations" target="_blank">
                            <img src="~/Images/donate-btn.png" alt="Donate through PayPal"/>
                        </a>
                    </li>

                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            Html.RenderPartial("_AcctPortal");
                        }
                    }
                    @Html.Partial("_LoginPartial")

                </ul>
            </div>
        </div>
    </div>
    @*Body*@
    

    @RenderBody()

    @*Footer*@
    <br />
    <footer>
        <div class="row" style="background-color: #368BC1; padding-top: 5px; padding-bottom: 5px;">
            <div class="footer">
                <!-- Add icon library -->
                <br />
                <div class="col-sm-4">
                    <img src="~/Images/kyhbpa-logo.png" style="height:20%; width:20%; opacity:1; float:left;" alt="KYHBPA Logo" hspace="10" />
                    <p style="color: black;">The Kentucky HBPA is an organization of owners and trainers committed to working
                    for the betterment of racing on all levels. From negotiating with racetracks, to providing benevolence to
                    horsemen in need, education and recreation programs to the backstretch, and various insurance packages.
                    The HBPA is you, and we are <i>Horsemen helping Horsemen.</i></p>
                </div>
                <div class="col-sm-2" style="color:black">
                    <a href="~/Home/About" style="color:goldenrod"><strong>What We Do</strong></a><br />
                    <a href="~/Home/BoardOfDirectors" style="color:goldenrod"><strong>Meet Our Staff</strong></a><br />
                    <a href="~/Member/Benefits" style="color:goldenrod"><strong>Benefits</strong></a><br />
                    <a href="~/News/NewsGallery" style="color:goldenrod"><strong>News</strong></a><br />
                    <a href="~/Event" style="color:goldenrod"><strong>Events Calendar</strong></a><br />
                    <a href="~/Document/PhotoGallery" style="color:goldenrod"><strong>Photo Gallery</strong></a><br />
                    <a href="~/Account/Register" style="color:goldenrod"><strong>Become a Member</strong></a><br />
                </div>
                <div class="col-sm-3" style="color:black">
                    <p><strong>Kentucky Horsemen's Benevolent & Protective Association</strong><br /></p>
                    3729 S. Fourth St.<br />
                    Louisville, KY 40214-1712<br />
                    800-928-4272<br />
                    <a href="mailto:kentuckyhbpa@gmail.com">kentuckyhbpa@gmail.com</a>
                </div>
                <center>
                    <div class="col-sm-3">
                        @*Social Media Buttons*@
                        <p style="color: black;"><strong>Connect with us on:</strong></p>
                        <a href="https://www.facebook.com/KYhbpa/" class="btn btn-social-icon btn-facebook" target="_blank">
                            <span class="fa fa-facebook"></span>
                        </a>
                        <a href="https://twitter.com/kyhbpa" class="btn btn-social-icon btn-twitter" target="_blank">
                            <span class="fa fa-twitter"></span>
                        </a>
                        <a href="https://www.instagram.com/kentuckyhbpa/" class="btn btn-social-icon btn-instagram" target="_blank">
                            <span class="fa fa-instagram"></span>
                        </a>

                        <table style="border-style:none;">
                            <tr>
                                <td class="padCols td" align="center">
                                    @*Donate Button*@
                                    <br />
                                    <a href="https://www.paypal.com/us/webapps/mpp/donations" target="_blank">
                                        <img src="~/Images/donate-btn.png" alt="Donate through PayPal"/>
                                    </a>
                                </td>
                            </tr>
                        </table>
                    </div>
                </center>
            </div>
        </div>
        <br />
        <div>
            <table style="border-style:none;" align="center">
                <tr>
                    <td align="center">
                        @*Copyright, address, and design*@
                        &copy; @DateTime.Now.Year - Kentucky Horsemen’s Benevolent and Protective Association, Inc.
                        | All Rights Reserved | <a href="mailto:kentuckyhbpa@gmail.com">kentuckyhbpa@gmail.com</a>
                        <br />
                        Site design by Equus Solutions
                        <img src="~/Images/EquusSolutions-logo.png" height="20" width="58" alt="Equus Solutions Logo" />
                    </td>
                </tr>
            </table>
        </div>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>