@using KYHBPA.Controllers
@model KYHBPA.Models.ViewModels.DocumentViewModel

<h2>Upload Member Card</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Upload Member Card</h4>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("UploadMemberCard", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                <label for="file">Upload Form</label>
                <input type="file" name="file" id="file" />
            </div>
            <br />
            <input type="submit" />
        }

    </div>
</div>
