@model KYHBPA.Models.News

<div>
    <hr />

    <img src="@(string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.Picture.FileBytes)))" class="thumbnail" style="height:10%; width:10%" />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Headline)
        </dt>

        <dd>
            <h3>@Html.DisplayFor(model => model.Headline)</h3>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Summary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Summary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.URL)
        </dt>

        <dd>
            <a href="@Model.URL" target="_blank">@Html.DisplayFor(model => model.URL)</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>