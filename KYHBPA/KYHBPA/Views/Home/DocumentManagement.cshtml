@using KYHBPA.Controllers

@{
    ViewBag.Title = "DocumentManagement";
}

<h2>Document Management</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>Upload Documents</h4>
    </div>
    <div class="panel-body">

        @using (Html.BeginForm("UploadDocument", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>
                <label for="memberId">Member Id:</label>
                <input type="text" name="memberId" id="memberId" />    
            </div>
            <br/>
            <div>
                <label for="file">Upload Form</label>
                <input type="file" name="file" id="file" />    
            </div>
            <br/>
            <input type="submit" />
        }

    </div>
</div>


<div class="panel panel-primary">
    <div class="panel-heading">
        <h4>My Documents</h4>
    </div>
    <div class="panel-body">        
        @Html.ActionLink("Get Member #1's First Document", "GetDocument", new {controller = "Home", memberId = 1}, new {@class = "btn btn-primary"})
    </div>
</div>