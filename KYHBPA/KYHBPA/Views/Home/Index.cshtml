@model KYHBPA.Models.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home | KYHBPA";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="row">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
        </ol>

        <div class="carousel-inner" role="listbox">
            @{
                if (Model.News.Count > 0)
                {
                    <div class="item active">
                        <a href=@Model.News[0].URL target="_blank">
                            <img src="@(string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(Model.News[0].Picture.FileBytes)))" />
                        </a>
                        <div class="carousel-caption">
                            <h3 class="carousel-title">
                                @Model.News[0].Headline
                            </h3>
                            <p class="carousel-text">
                                @Model.News[0].Summary
                            </p>
                            <p>
                                <a href="https://www.facebook.com/KYhbpa/" class="btn btn-social-icon btn-facebook" target="_blank">
                                    <span class="fa fa-facebook"></span>
                                </a>
                                <a href="https://twitter.com/kyhbpa" class="btn btn-social-icon btn-twitter" target="_blank">
                                    <span class="fa fa-twitter"></span>
                                </a>
                                <a href="https://www.instagram.com/kentuckyhbpa/" class="btn btn-social-icon btn-instagram" target="_blank">
                                    <span class="fa fa-instagram"></span>
                                </a>
                            </p>
                        </div>
                    </div>
                }
                for (var i = 1; i < Model.News.Count; i++)
                {
                    <div class="item">
                        <a href=@Model.News[i].URL target="_blank">
                            <img src="@(string.Format("data:image/gif;base64,{0}", Convert.ToBase64String(@Model.News[i].Picture.FileBytes)))" />
                        </a>
                        <div class="carousel-caption">
                            <h3 class="carousel-title">
                                @Model.News[i].Headline
                            </h3>
                            <p class="carousel-text">
                                @Model.News[i].Summary
                            </p>
                            <p>
                                <a href="https://www.facebook.com/KYhbpa/" class="btn btn-social-icon btn-facebook" target="_blank">
                                    <span class="fa fa-facebook"></span>
                                </a>
                                <a href="https://twitter.com/kyhbpa" class="btn btn-social-icon btn-twitter" target="_blank">
                                    <span class="fa fa-twitter"></span>
                                </a>
                                <a href="https://www.instagram.com/kentuckyhbpa/" class="btn btn-social-icon btn-instagram" target="_blank">
                                    <span class="fa fa-instagram"></span>
                                </a>
                            </p>
                        </div>
                    </div>
                }
            }

        </div>
        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

@*Jumbotron*@
<div class="row">
    <div class="jumbotron">
        <img src="~/Images/kyhbpa-logo.png" style="float:left; height:12%; width:12%; opacity:1" alt="KYHBPA Logo" hspace="20" />

        <p class="lead" style="color:black">
            The Kentucky Horsemen's Benevolent and Protective Association (HBPA) provides benevolence to horsemen in need, education
            and recreation programs to the backstretch, and various insurance packages. <i>We are Horsemen helping Horsemen.</i>
            <br />
            <a href="/Home/About" class="btn btn-primary btn-lg" style="margin-top:6px; color:white;">Learn More &raquo;</a>
        </p>
    </div>
</div>


